# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  fsystem_config = debug
  id_manager_config = debug
  system_config_config = debug
  event_handling_config = debug

else ifeq ($(config),release)
  fsystem_config = release
  id_manager_config = release
  system_config_config = release
  event_handling_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := fsystem id_manager system_config event_handling

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

fsystem:
ifneq (,$(fsystem_config))
	@echo "==== Building fsystem ($(fsystem_config)) ===="
	@${MAKE} --no-print-directory -C . -f fsystem.make config=$(fsystem_config)
endif

id_manager:
ifneq (,$(id_manager_config))
	@echo "==== Building id_manager ($(id_manager_config)) ===="
	@${MAKE} --no-print-directory -C ../id_manager -f Makefile config=$(id_manager_config)
endif

system_config:
ifneq (,$(system_config_config))
	@echo "==== Building system_config ($(system_config_config)) ===="
	@${MAKE} --no-print-directory -C ../system_config -f Makefile config=$(system_config_config)
endif

event_handling:
ifneq (,$(event_handling_config))
	@echo "==== Building event_handling ($(event_handling_config)) ===="
	@${MAKE} --no-print-directory -C ../event_handling -f Makefile config=$(event_handling_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f fsystem.make clean
	@${MAKE} --no-print-directory -C ../id_manager -f Makefile clean
	@${MAKE} --no-print-directory -C ../system_config -f Makefile clean
	@${MAKE} --no-print-directory -C ../event_handling -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   fsystem"
	@echo "   id_manager"
	@echo "   system_config"
	@echo "   event_handling"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"